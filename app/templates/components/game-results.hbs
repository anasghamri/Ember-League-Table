<h2 class="text-green-dark text-center">Games played : {{games.length}}</h2>

{{#each (take 10 (reverse @games)) as |game|}}
<div class="bg-blue-light p-2 m-2 flex font-bold text-xs">
    <div class="flex-1 text-right p-2">
        {{game.homeTeam.name}}
    </div>

    <div class="flex-shrink bg-yellow p-2 border-r-2 border-yellow-dark">
        {{game.homeGoals}}
    </div>

    <div class="flex-shrink bg-yellow p-2 border-l-2 border-yellow-dark">
        {{game.awayGoals}}
    </div>

    <div class="flex-1 p-2">
        {{game.awayTeam.name}}
    </div>
</div>
{{/each}}

<button class="flex-shrink w-full py-4 bg-pink hover:bg-pink-light text-white font-bold rounded" onclick={{action 'newGame'}}>New League ðŸŽ²</button>